#!/usr/bin/env bash
# Load functions and variables
. /usr/bin/common
# Display ssh logo
ssh_logo

cat << "EOF"
Welcome to ALboot SSH! ALboot SSH aims to be a simple user-friendly SSH interface

The keyboard layout is in American Qwerty.`.
The default SSH port is 22
EOF
prompt 'User: ' user
prompt 'Port: ' port

clear

blue_echo 'SSHing into Device...'
ssh -o "ProxyCommand=inetcat $port" -o "UserKnownHostsFile=/dev/null" $user@iPhone || \
    failed_echo 'Failed to SSH into Device'
enter_to_quit